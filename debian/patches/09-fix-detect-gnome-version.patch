Description: Fix detect gnome version
Author: Mateusz ≈Åukasik <mati75@linuxmint.pl>
Bug-Ubuntu: https://bugs.launchpad.net/bugs/1740420

Last-Update: 2018-01-04

--- a/data/xsession/openbox-gnome-session.in
+++ b/data/xsession/openbox-gnome-session.in
@@ -12,7 +12,7 @@ xprop -root -remove _NET_NUMBER_OF_DESKT
       -remove _NET_DESKTOP_NAMES \
       -remove _NET_CURRENT_DESKTOP 2> /dev/null
 
-VER=$(gnome-session --version 2>/dev/null | \
+VER=$(/usr/lib/gnome-session/gnome-session-binary --version 2>/dev/null | \
       sed -e 's/[^0-9.]*\([0-9.]\+\)/\1/')
 
 MAJOR=$(echo $VER | cut -d . -f 1)
